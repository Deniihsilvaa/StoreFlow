{
  "name": "storeflow-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "prisma generate && next build",
    "prisma:db-push": "prisma db push --schema=prisma/schema.prisma",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:seed": "prisma db seed",
    "prisma:format": "prisma format",
    "prisma:check": "prisma validate",
    "prisma:version": "prisma --version",
    "prisma:test-connection": "tsx scripts/test-prisma-connection.ts",
    "test:env": "tsx scripts/test-env-vars.ts",
    "test:routes": "tsx scripts/test-api-routes.ts",
    "test:all": "npm run test:env && npm run test:routes && npm run prisma:test-connection",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "@prisma/client": "^5.22.0",
    "@supabase/supabase-js": "^2.48.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.6.0",
    "next": "16.0.10",
    "pino": "^9.5.0",
    "pino-http": "^9.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.15.0",
    "eslint-config-next": "16.0.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  }
}
